# 로컬 실행용 환경변수 예시 (이 파일을 복사하여 env.local.ps1로 사용)
# 키 값은 예시이며, 실제로는 32바이트 랜덤 Base64를 사용하세요.

$env:SPRING_PROFILES_ACTIVE = "local"

# MariaDB 연결 정보
$env:SPRING_DATASOURCE_URL = "jdbc:mariadb://localhost:3306/mes_tenant_a"
$env:SPRING_DATASOURCE_USERNAME = "mes"
$env:SPRING_DATASOURCE_PASSWORD = "mes1234!"

# 암호화 키 설정
$env:MES_CRYPTO_KEYS = "v1=BASE64_KEY_HERE;v2=BASE64_KEY_HERE"
$env:MES_CRYPTO_ACTIVE_KEY_ID = "v1"
$env:MES_CRYPTO_ALLOW_PLAINTEXT = "false"

# 포트/로그
$env:SERVER_PORT = "8080"
$env:LOG_PATH = "C:/MES/logs"
